<?xml version="1.0" encoding="iso-8859-1"?>
<install version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - Brightcove Player</name>
	<creationDate>March 26, 2013</creationDate>
	<author>Matt Thomas</author>
	<authorEmail>matt@betweenbrain.com</authorEmail>
	<authorUrl>www.betweenbrain.com</authorUrl>
	<copyright>(C) 2013 Matt Thomas. All rights reserved.</copyright>
	<license>GNU GPL v3 or later</license>
	<version>1.1</version>
	<description>A simple plugin to convert {Brightcove [Video ID] [width]x[height] [Player ID] [Share URL]} to the embedded Brightcove player</description>
	<files>
		<filename plugin="brightcoveplayer">brightcoveplayer.php</filename>
	</files>
	<params>
		<param name="playerKey"
		       type="text"
		       default=""
		       label="Player Key"
		       description=""/>
		<param name="defaultPlayerId"
		       type="text"
		       default=""
		       label="Default Player ID"
		       description=""/>
		<param name="defaultWidth"
		       type="text"
		       default=""
		       label="Default Width"
		       description=""/>
		<param name="defaultHeight"
		       type="text"
		       default=""
		       label="Default Height"
		       description=""/>
	</params>
</install>